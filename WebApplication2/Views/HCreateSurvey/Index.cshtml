@model IEnumerable<Survey>

@{
    ViewData["Title"] = "List of Survey";
}

<div class="h2">
    <h2 class="myheader card-header"> Create a new Survey : </h2>
</div><div class="row">
          <div class="col-md-8 offset-md-2" style=" background-image:src(/wwwroot/Pics/kfhback.PNG)">
              <style>
                  body {
                      background-image: url(/Pics/kfhback.PNG);
                  }

                  .myheader {
                      color: limegreen;
                      font-weight: bold;
                      font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
                  }

                  .button3 {
                      background-color: #f3f3f3;
                      display: inline-block;
                      color: black;
                      font-size: 14px;
                      padding: 5px 15px;
                      border-radius: 14px;
                      border: 2px solid #009879;
                      transition-duration: 0.4s;
                      width: 70%;
                      text-align: center;
                      margin-left: 30%;
                      margin-right: 30%;
                  }

                      .button3 span {
                          cursor: pointer;
                          display: inline-block;
                          position: relative;
                          transition: 0.5s;
                      }

                          .button3 span:after {
                              content: '\00bb';
                              position: absolute;
                              opacity: 0;
                              top: 0;
                              right: -10px;
                              transition: 0.8s;
                          }

                      .button3:hover {
                          background-color: rgb(157 200 37 / 0.65);
                          color: white;
                      }

                          .button3:hover span:after {
                              opacity: 1;
                              right: 5;
                          }

