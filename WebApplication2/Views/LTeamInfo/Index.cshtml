@model IEnumerable<Employee>

@{
    ViewData["Title"] = "List of Employees";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th> @Html.DisplayNameFor(model => model.EmployeeId)</th>
                    <th> @Html.DisplayNameFor(model => model.name)</th>
                    <th> @Html.DisplayNameFor(model => model.StartDate)</th>
                    <th> @Html.DisplayNameFor(model => model.grade)</th>
                    <th> @Html.DisplayNameFor(model => model.Salary)</th>
                    <th> @Html.DisplayNameFor(model => model.color)</th>
                    <th> @Html.DisplayNameFor(model => model.weight)</th>
                    <th> @Html.DisplayNameFor(model => model.ChildrenTotal)</th>
                    <th> @Html.DisplayNameFor(model => model.Address)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.EmployeeId)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.grade)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Salary)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.color)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.weight)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.ChildrenTotal)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary"><i class="bi bi-pencil-square">Edit</i></a>
                        <a class="btn btn-outline-info"><i class="bi bi-pencil-eye">Details</i></a>
                        <a class="btn btn-outline-danger text-white"><i class="bi bi-pencil-trash">Delete</i></a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

